- var _ = lang._('includes.questions');

// questionControlTrueOrFalse
script(type="text/ng-template", id="questionControlTrueOrFalse.html")
	b {{position}}. {{question.Question}}
	br
	| {{question.Description}}
	
	form.form-group
		input(type="radio", value="1", name="{{questionId}}", ng-model="question.Value", ng-disabled="studentReadOnly")  
		|  #{_('True')} 
		input(type="radio", value="0",name="{{questionId}}", ng-model="question.Value", ng-disabled="studentReadOnly")  
		|  #{_('False')}

	.form-group
		label #{_('Student Comment')}:
		textarea.form-control(ng-model="question.Comment", placeholder="#{_('Explain your option here')}", ng-disabled="studentReadOnly")
	div(ng-show="showTeacherReview")
		b #{_('Teacher Evaluation')}:
		form.form-group
			input(type="radio", value="1", name="t{{questionId}}", ng-model="question.TeacherValue", ng-disabled="teacherReadOnly")  
			|  #{_('True')} 
			input(type="radio", value="0",name="t{{questionId}}", ng-model="question.TeacherValue", ng-disabled="teacherReadOnly")
			|  #{_('False')}
		.form-group
			label #{_('Teacher Comment')}:
			textarea.form-control(ng-model="question.TeacherComment", placeholder="#{_('Give feedback to the student here')}", ng-disabled="teacherReadOnly")

