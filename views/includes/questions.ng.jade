// questionControlVideoRecording
script(type="text/ng-template", id="questionControlVideoRecording.html")
	b {{position}}. {{question.Question}}
	br
	| {{question.Description}}
	.alert.alert-warning(ng-show="error") {{error}}
	div(ng-show="question.Value")
		// video(width="320", height="240", controls, src="/api/files/{{question.Value._id}}/data")
		a(href='/api/files/{{question.Value._id}}/data') #{_('Download Video File')}
	form(method="post", enctype="multipart/form-data", ng-submit="uploadVideo($event)",  action="/api/files", ng-hide="studentReadOnly")
		.form-group
			input(type="file", name="upload_file", ng-disabled="studentReadOnly", accept="video/*", capture="camcorder")
			input(type="hidden", name="type", value="video", ng-disabled="studentReadOnly")
			input(type="submit", value="#{_('Upload Video')}", ng-disabled="studentReadOnly")

	.form-group
		label #{_('Student Comment')}:
		textarea.form-control(ng-model="question.Comment", placeholder="#{_('Explain your option here')}", ng-disabled="studentReadOnly")
		
	div(ng-show="showTeacherReview")
		.form-group
			label #{_('Teacher Comment')}:
			textarea.form-control(ng-model="question.TeacherComment", placeholder="#{_('Give feedback to the student here')}", ng-disabled="teacherReadOnly")
			
